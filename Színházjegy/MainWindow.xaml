<Window x:Class="Színházjegy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Színházjegy"
        mc:Ignorable="d"
        Title="Színházjegy Vásárlás" Height="650" Width="400">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,10">
            <TextBlock Text="Jegyvásárlás" FontSize="24" FontWeight="Bold" Margin="0,0,0,10" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,5">
            <TextBlock Text="Név:"/>
            <TextBox x:Name="txtNev" Width="300" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,5">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Width="300" HorizontalAlignment="Left"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,5">
            <TextBlock Text="Előadás:"/>
            <ComboBox x:Name="cmbEloadas" Width="300" HorizontalAlignment="Left" SelectedIndex="0">
                <ComboBoxItem Content="Macskák"/>
                <ComboBoxItem Content="Hamlet"/>
                <ComboBoxItem Content="Rómeó és Júlia"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,5">
            <TextBlock Text="Jegyek száma:"/>
            <TextBox x:Name="txtJegyekSzama" Width="300" HorizontalAlignment="Left"/>
        </StackPanel>

        <Button x:Name="btnVasarlas" 
                Grid.Row="5" 
                Content="Jegyvásárlás" 
                Width="200" 
                Height="40" 
                HorizontalAlignment="Center" 
                Margin="0,20,0,5" 
                Click="btnVasarlas_Click"/>


        <StackPanel Grid.Row="6" Margin="0,10,0,5">
            <TextBlock Text="Korábbi vásárlások" FontWeight="Bold" FontSize="16"/>
        </StackPanel>

        <ListBox x:Name="lstVasarlasok" Grid.Row="7" VerticalAlignment="Stretch" Margin="0,5"/>

        <Button x:Name="btnBetoltes" 
                Grid.Row="8" 
                Content="Vásárlások betöltése" 
                Width="200" 
                HorizontalAlignment="Center" 
                Margin="0,5,0,0"
                Click="btnBetoltes_Click"/>
    </Grid>
</Window>