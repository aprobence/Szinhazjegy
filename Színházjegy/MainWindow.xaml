<Window x:Class="Színházjegy.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Színházjegy"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid Margin="20">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,10">
            <TextBlock Text="Jegyvásárlás" FontSize="24" FontWeight="Bold" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Margin="0,10">
            <TextBlock Text="Név:"/>
            <TextBox x:Name="txtNev" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Margin="0,10">
            <TextBlock Text="Email:"/>
            <TextBox x:Name="txtEmail" Width="250"/>
        </StackPanel>

        <StackPanel Grid.Row="3" Margin="0,10">
            <TextBlock Text="Előadás:"/>
            <ComboBox x:Name="cmbEloadas" Width="250">
                <ComboBoxItem Content="Macskák"/>
                <ComboBoxItem Content="Hamlet"/>
                <ComboBoxItem Content="Rómeó és Júlia"/>
            </ComboBox>
        </StackPanel>

        <StackPanel Grid.Row="4" Margin="0,10">
            <TextBlock Text="Jegyek száma:"/>
            <TextBox x:Name="txtJegyekSzama" Width="250"/>
        </StackPanel>

        <Button x:Name="btnVásárlás" Grid.Row="5" Content="Jegyvásárlás" Width="150" Height="40" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20" Click="btnVásárlás_Click"/>

        <StackPanel>
            
        </StackPanel>
    </Grid>
</Window>
